@inject NavigationManager NavigationManager
@using Client.Components.Atoms.Button
@using Client.Components.Atoms.Image

<header>
    <Image src="assets/logo.svg" class="header-logo" onclick="HandleHomeNavigation" />
    <Button class="login-btn" @onclick="HandleNavigation">Login</Button>
</header>

@code {
    [Parameter] public string HeaderClass { get; set; } = string.Empty;
    [Parameter] public string LogoSrc { get; set; } = "assets/logo.svg";
    [Parameter] public string LogoAlt { get; set; } = "Logo";

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object> AdditionalAttributes { get; set; } = new Dictionary<string, object>();

    private void HandleNavigation()
    {
        NavigationManager.NavigateTo("/login");
    }

    private void HandleHomeClick()
    {
        NavigationManager.NavigateTo("");
    }
}
